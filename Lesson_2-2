#include <stdio.h>
#include <math.h>

int main()
{
    double a, b, eps = 0.001;
    printf("Введите длину катета №1:   ");
    scanf("%lf", &a);
    printf("Введите длину катета №2:   ");
    scanf("%lf", &b);
    
    printf("Гипотенуза равна %lf, периметр равен %lf, а площадь равна %lf.", sqrt(a * a + b * b), a + b + sqrt(a * a + b * b), a * b / 2);

    return 0;
}
